<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.passeapp.dark_legion.cradioapp.FragmentTabStream">

    <android.support.v4.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|center|center_horizontal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center|center_horizontal">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center|center_horizontal"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/mainLogoImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/radio_icon"
                        android:minWidth="@dimen/main_logo_width"
                        android:minHeight="@dimen/main_logo_height"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center|center_horizontal"
                    android:layout_margin="5dp"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|center|center_horizontal"
                        android:layout_weight="1"
                        android:weightSum="2">

                        <ImageButton
                            android:id="@+id/playBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_stat_play_circle_filled"
                            android:layout_weight="1"/>

                        <ImageButton
                            android:id="@+id/stopBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_stat_pause_circle_outline"
                            android:layout_weight="1"/>

                    </LinearLayout>
                </TableRow>

            </TableLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>

